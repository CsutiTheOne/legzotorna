<%- include('../partials/header') %>
<%- include('../partials/adminNavbar') %>
<%- include('../partials/messagebar') %>

 <div class="container">
     <div class="row">
        <div class="col-12">
            <h1 class="text-center"><img src="/img/icons/030-folder.svg" width="64px" height="auto"> Fájlok</h1>
        </div>
     </div>
     <div class="row">
        <div class="col-12">
            <ul class="list-group"></ul>
        </div>
     </div>
     <div class="row">
         <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modal">
             Fájl feltöltése
         </button>
     </div>
 </div>

<iframe src="" width="" height="" style="display:none;" id="downloadFrame"></iframe>

<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Fájl feltöltése</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="#" method="#">
                    <div class="form-group">
                        <input type="text" name="filename" class="form-control" placeholder="Fájl neve" aria-describedby="fileHelp">
                        <small id="filelHelp" class="form-text text-muted">Ha a fájl neve üresen marad, automatikusan kap nevet.</small>
                    </div>
                    <div class="form-group">
                        <input type="file" name="file">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="upload" type="button" data-dismiss="modal" class="btn btn-primary">Feltöltés</button>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

<script type="text/javascript" src="/api/js/files.js"></script>
