<%- include('../partials/header') %>
<%- include('../partials/adminNavbar') %>
<%- include('../partials/messagebar') %>

<div class="container">
    <div class="row">
        <h1 class="col-12 text-center">Termékek:</h1>
    </div>
    <div class="row">
        <div class="col-12 d-flex flex-column">
            <button type="button" class="btn btn-lg btn-success" data-toggle="modal" data-target="#modal">
                Új termék
            </button>
        </div>
    </div>
    <div class="row products">
        <!-- IDE GYÜNNEK MAJD A TERMÉKEK-->

    </div>
</div>



<!--MODAL WINDOW -->
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="Modal ablak" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <!-- TITLE -->
                <h5 class="modal-title"></h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- BODY -->
                <div class="container">
                    <div class="row>">
                        <div class="col-12">
                            <form id="productForm">
                                <div class="form-group">
                                    <input type="text" name="title" placeholder="Termék neve" class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="number" name="price" placeholder="Termék ára (Ft)" class="form-control">
                                </div>
                                <div class="form-group">
                                    <textarea type="text" name="description" placeholder="Rövid leírás..." class="form-control"></textarea>
                                </div>
                                <div class="form-group">
                                    <select name="type" class="form-control">
                                        <option value="none" default>Termék típusa</option>
                                        <option value="digital-file">Digitális (fájl)</option>
                                        <option value="digital-url">Digitális (url)</option>
                                        <option value="tool">Eszköz</option>
                                        <option value="etc">Egyéb</option>
                                    </select>
                                </div>
                                <div class="form-group productFile d-none">
                                    <select class="form-control" name="url">
                                        <option value="null" selected>Fájl</option>
                                    </select>
                                </div>
                                <div class="form-group productUrl d-none">
                                    <input type="text" name="url" value="null" placeholder="cím" class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="checkbox" class="form-check-input" name="ships" checked>
                                    <label class="form-check-label" for="exampleCheck1">Kiszállítandó</label>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer d-flex flex-between">
                <button type="button" class="btn btn-danger" id="deleteProduct">Törlés</button>
                <button type="button" class="btn btn-primary" id="saveProduct">Mentés</button>
            </div>

        </div>
    </div>
</div>

<%- include('../partials/footer') %>

<script src="/api/js/products.js" type="text/javascript"></script>
